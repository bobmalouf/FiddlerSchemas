{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/wryan/FiddlerSchemas/master/src/schemas/json/standardTaskSchema.json",
  "title": "Task",
  "description": "Basic task",
  "type": "object",
  "properties": {
    "taskId": {
      "description": "The unique identifier for a task",
      "type": "string"
    },
    "taskTitle": {
      "description": "Title of the task",
      "type": "string"
    },
    "taskDescription": {
      "description": "Description of the task",
      "type": "string"
    },
    "taskStatus": {
      "description": "Status of the task",
      "type": "string"
    },
    "applicationURI": {
      "description": "URI for supporting applications to help complete task",
      "type": "string"
    }
  },
  "required": [ "taskId", "taskTitle" ]
}